{
  "compilerOptions": {
    "target": "es5",                          
    "module": "commonjs",     
    "declaration": true,                
    "lib": ["es2017", "es7", "es6"], 
    "allowJs": true,                       
    "outDir": "./dist",                        
    "removeComments": true,                
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],                          
    "esModuleInterop": true,                  
    "resolveJsonModule": true,
    "experimentalDecorators": true,        
    "emitDecoratorMetadata": true,         
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "src"
  },
  "include": [
    "src/**/*"
  ]
}
